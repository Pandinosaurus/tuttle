#!/usr/bin/env python
# -*- coding: utf8 -*-

import sys
from optparse import OptionParser
from tuttle import prepare_workflow, \
                   run_workflow, \
                   abort_if_workflow_inconsistent, \
                   invalidate_previous

from os import chdir, getcwd
from os.path import abspath, exists
from tuttle.utils import CurrentDir


def parse_options():
    usage = 'bin/tuttle'
    parser = OptionParser(usage=usage)
    parser.add_option('-f', '--file',
                  default='tuttlefile',
                  dest='tuttlefile',
                  help='Path to the tuttlefile : file describing the workflow')
    parser.add_option('-w', '--workspace',
                  default='.',
                  dest='workspace',
                  help='Directory where the workspace lies. Default is the current directory')
    options, _ = parser.parse_args()
    return options

def main():
    """Main entry point for the project."""

    options = parse_options()
    tuttlefile_path = abspath(options.tuttlefile)
    if not exists(tuttlefile_path):
        print "No tuttlefile"
        exit(0)
    with CurrentDir(options.workspace):
        workflow = prepare_workflow(tuttlefile_path)
        if not workflow:
            return
        if abort_if_workflow_inconsistent(workflow):
            return
        invalidate_previous(workflow)
        if not run_workflow(workflow):
            return 2


if __name__ == '__main__':
    sys.exit(main())